<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:text="Mały"
        android:id="@+id/textView2"
        android:layout_gravity="right"
        android:layout_weight="0.10"
        android:layout_marginRight="40dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toLeftOf="@+id/textView" />

    <TextView
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:text="Duży"
        android:id="@+id/textView"
        android:layout_weight="0.10"
        android:layout_marginRight="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalibracja"
        android:id="@+id/button"
        android:layout_below="@+id/heard"
        android:layout_marginTop="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Kali"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Słysze dwa tony"
        android:id="@+id/button2"
        android:onClick="Klikacz"

        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Słysze jeden ton - przejdź do testu"
        android:id="@+id/button3"
        android:onClick="jeden"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mały Ton"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Duży Ton"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
